//- //home list cate
mixin HomeCate(header, vt, cate)
	.home-br
		.container
			nav.flex(aria-label="Breadcrumb")
				ol.inline-flex.items-center.space-x-1
					li
						.flex.items-center
							a(href='#').font-normal.text-16px.text-t6.mr-4= header
					li
						.flex.items-center.font-normal.text-16px.text-t6= vt
							span.ml-4.font-normal.text-16px.text-t6= cate 


//- home-4(in page Home-1) List CB information
mixin ListInformationHome-1(icon, date, title)
	div()
	.flex
		i.font-light.text-40px.text-primary(class= icon)
		.flex.flex-col.mx-auto.px-9.py-0
			p.font-normal.text-sm.text-t6= date
			h5.font-bold.text-lg.text-t3= title

//- home-1 listCardNew(swiper)
mixin ListCardNewHome-1(image, header, desc)
	.swiper-slide.flex.flex-col.h-full
		.card-new-content
			img(src= image)
			h2.card-new-header.mt-5= header
			p.card-new-desc.pt-5= desc
			ol.date-card-new.inline-flex.items-center.space-x-1.text-normal.mt-3.h-full
				li
					.flex.items-center
						a(href='#') Thành viên
				li
					.flex.items-center.mr-2 |
						span.ml-2 0.3.11.202


