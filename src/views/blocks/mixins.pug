//- page content LVHD DS
mixin ListContentHome3DS(image, header, desc, btn)
	div.mt-10.mb-20(class="xs:col-span-12 sm:col-span-4 md:col-span-4 lg:col-span-6")
		.lv-main.w-full.h-full.flex.flex-col.mx-auto.relative
			.lv-bg.bg-bg1.w-full.h-full
			img(src= image class='lv-mg')

	div.flex.flex-col.my-auto(class="xs:col-span-12 sm:col-span-8 md:col-span-8 lg:col-span-6")
		h2.font-light.text-32px.uppercase.text-primary= header
		p.font-light.text-18px.text-t3.break-all.mt-5= desc
		.btn.flex.mt-5
			.bg-t2.border.border-full.flex.rounded-full.shadow-s3
				button.text-normal.text-xl.text-t2.bg-primary.px-10.py-3.rounded-full.shadow-s3= btn
				button.px-5.py-3
					i.text-primary.font-light.text-xl(class="fa-thin fa-plus")
		

